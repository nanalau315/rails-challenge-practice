<% if flash[:errors]%>
<% flash[:errors].each do |e|%>
<ul>
<li><%= e %></li>
<% end %>
<% end %>
</ul>
<h1>New Employee</h1>

<%= form_for @employee do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label 'Company:' %><br>
<%= f.collection_select :company_id, @companies, :id, :name %><br><br>
<%= f.submit %>
<% end %>